@model Vehicles

 <div class="modal fade" id="insertVehicle">
     <div class="modal-dialog">
         <div class=" = modal-content">
             <div class =" modal-header">
                 <h4 class="modal-title" id="addVehicle">Add Vehicle</h4>
                 <button type="button" class="close" data-dismiss="modal">
                     <span>x</span>
                 </button>
             </div>

             <div class="modal-body">
                 <form action="Create">
                     <div class="form-group">
                         <label asp-for="Make">Make</label>
                         <input asp-for="Make" class="form-control" />
                         <span asp-validation-for="Make" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                         <label asp-for="Model"></label>
                         <input asp-for="Model" class="form-control" />
                         <span asp-validation-for="Model" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                         <label asp-for="Price"></label>
                         <input asp-for="Price" class="form-control" />
                         <span asp-validation-for="Price" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                         <label asp-for="Features"></label>
                         <input asp-for="Features" class="form-control" />
                         <span asp-validation-for="Features" class="text-danger"></span>
                     </div>
                 </form>
             </div>

             <div class="modal-footer">
                 <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                 <button type="button" class="btn btn-primary" data-save="modal">Save</button>
             </div>
         </div>
     </div>
 </div>
