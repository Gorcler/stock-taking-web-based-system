@model stock_taking_system.Models.Vehicles
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h3> Vehicle Entry</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            Vehicle Make
            <div class="form-group">
                <lable asp-for="Make" class="control-label"></lable>
                <input asp-for=" Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            Vehicle Model
            <div class="form-group">
                <lable asp-for="Model" class="control-label"></lable>
                <input asp-for=" Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            Vehicle Price
            <div class="form-group">
                <lable asp-for="Price" class="control-label"></lable>
                <input asp-for=" Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            Vehicle Key Features
            <div class="form-group">
                <lable asp-for="Features" class="control-label"></lable>
                <input asp-for=" Features" class="form-control" />
                <span asp-validation-for="Features" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

